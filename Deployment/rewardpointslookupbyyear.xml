<policies>
    <inbound>
        <base />
        <rewrite-uri template="/member/{memberId}/year/{year}/points" />
        <set-header name="function_key" exists-action="append">
            <value>%apifunctionkey%</value>
        </set-header>
        <set-backend-service base-url="https://%apifuncName%.azurewebsites.net" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>